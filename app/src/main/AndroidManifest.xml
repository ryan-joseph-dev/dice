<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryryapps.dice"
    android:versionCode="1"
    android:versionName="v1.0.0">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1409061861215532~3899502087"/>
        <activity
            android:name="com.ryryapps.SettingsActivity"
            android:screenOrientation="nosensor"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.ryryapps.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ryryapps.MainActivity" />
        </activity>
        <activity
            android:name="com.ryryapps.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ryryapps.MainActivity"
            android:screenOrientation="nosensor">
        </activity>
    </application>

</manifest>